{
  "expo": {
    "name": "Lune",
    "slug": "lune-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/lune-icon.png",
    "scheme": "lune",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/lune-splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2b311a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tormgibbs.luneapp"
    },
    "android": {
      "permissions": ["RECORD_AUDIO"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/lune-adaptive-icon.png",
        "backgroundColor": "#2b311a"
      },
      "package": "com.tormgibbs.luneapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photos"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      "expo-router",      
      "expo-video",
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "9dcfea47-7ac9-4c9c-b1f2-66c1fc311944"
      }
    },
    "owner": "tormgibbs"
  }
}
